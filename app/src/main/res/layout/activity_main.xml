<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FF03DAC5"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/buttonBarra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde_circular"
        android:drawableRight="@drawable/icono_barra"
        android:text="Grafico de Barra"
        android:textColor="#25478C" />
    <Button
        android:id="@+id/buttonCicular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/borde_circular"
        android:drawableRight="@drawable/icono_circular"
        android:text="Grafico Circular"
        android:textColor="#25478C" />
</LinearLayout>